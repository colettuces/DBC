<section class="welcome">
  <h2>
    {{ section.settings.heading }}<br>
    <span>{{ section.settings.brand_name }}</span>
  </h2>

  <p>{{ section.settings.paragraph_1 }}</p>
  <p>{{ section.settings.paragraph_2 }}</p>

  {% if customer %}
    <p>Welcome back, {{ customer.first_name }}!</p>
    <a href="/account" class="btn">View My Account</a>
  {% else %}
    <a href="/account/login" class="btn">Login</a>
    <a href="/account/register" class="btn">Sign Up</a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Welcome Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Welcome Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "DesignsbyColettuces"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "Whether you’re starting your bookstagram or looking to level up your content, you’re in the right place."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "Here, you’ll find vintage-inspired Canva templates and bookish design tools — all crafted to help you show up online in a way that feels soft, stylish, and unapologetically you."
    }
  ],
  "presets": [
    {
      "name": "Welcome",
      "category": "Hero"
    }
  ]
}
{% endschema %}
