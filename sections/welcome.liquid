<section class="welcome">
  <h2>
    {{ section.settings.heading }}<br>
    <span>{{ section.settings.brand_name }}</span>
  </h2>

  <p>{{ section.settings.paragraph_1 }}</p>
  <p>{{ section.settings.paragraph_2 }}</p>

  {% if section.settings.show_decor_top_left %}
    <div class="decor" style="
      background-image: url({{ section.settings.decor_top_left_image | asset_url }});
      position: absolute;
      top: {{ section.settings.decor_top_left_top }};
      left: {{ section.settings.decor_top_left_left }};
      width: 100px;
      height: 100px;
      background-size: contain;
      background-repeat: no-repeat;
    "></div>
  {% endif %}

  {% if customer %}
    <p>Welcome back, {{ customer.first_name }}!</p>
    <a href="/account" class="btn">View My Account</a>
  {% else %}
    <a href="/account/login" class="btn">Login</a>
    <a href="/account/register" class="btn">Sign Up</a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Welcome Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Welcome Heading",
      "default": "Welcome to"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "DesignsbyColettuces"
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "First Paragraph",
      "default": "Whether you’re starting your bookstagram or looking to level up your content, you’re in the right place."
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Second Paragraph",
      "default": "Here, you’ll find vintage-inspired Canva templates and bookish design tools — all crafted to help you show up online in a way that feels soft, stylish, and unapologetically you."
    },
    {
      "type": "checkbox",
      "id": "show_decor_top_left",
      "label": "Show Top Left Decor",
      "default": true
    },
    {
      "type": "text",
      "id": "decor_top_left_image",
      "label": "Top Left Image",
      "default": "openbook.png"
    },
    {
      "type": "text",
      "id": "decor_top_left_top",
      "label": "Top",
      "default": "20px"
    },
    {
      "type": "text",
      "id": "decor_top_left_left",
      "label": "Left",
      "default": "20px"
    }
  ],
  "presets": [
    {
      "name": "Welcome",
      "category": "Hero"
    }
  ]
}
{% endschema %}
